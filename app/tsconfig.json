    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "outDir": "./public",
        "sourceMap": true,
        "skipLibCheck": true
